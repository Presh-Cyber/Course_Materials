<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:background="@color/grey_5"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
    android:orientation="vertical"
    android:layout_height="113dp"
    android:layout_width="158dp"
    android:layout_marginTop="279dp"
    android:layout_marginStart="35dp">

    <Button
        android:id="@+id/Button"
        android:layout_width="158dp"
        android:layout_height="113dp"
        android:clickable="true"
        android:background="@color/colorAccent"
        android:text="Science"
        android:textAllCaps="false"
        android:textColor="@color/grey_3"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="241dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="158dp"
        android:layout_height="113dp"
        android:layout_marginTop="279dp"
        android:layout_marginStart="222dp">
    <Button
        android:id="@+id/Button1"
        android:layout_width="158dp"
        android:layout_height="113dp"
        android:background="@color/deep_purple_400"
        android:text="Engineering"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/grey_3"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="281dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="158dp"
        android:layout_height="113dp"
        android:layout_marginTop="421dp"
        android:layout_marginStart="35dp">
    <Button
        android:id="@+id/button2"
        android:layout_width="158dp"
        android:layout_height="113dp"
        android:background="@color/colorAccent"
        android:text="Management Science"
        android:textAllCaps="false"
        android:textColor="@color/grey_3"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="418dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="158dp"
        android:layout_height="113dp"
        android:layout_marginTop="421dp"
        android:layout_marginStart="222dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="158dp"
            android:layout_height="113dp"
            android:background="@color/deep_purple_400"
            android:text="Art"
            android:textAllCaps="false"
            android:textColor="@color/grey_3"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="418dp"
            android:textSize="20dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="544dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-422dp"
        android:fitsSystemWindows="true"
        app:srcCompat="@drawable/content_banner" />

    <TextView
        android:id="@+id/Faculties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:text="FACULTIES"
        android:elevation="45dip"
        android:textAppearance="@style/Animation.AppCompat.DropDownUp"
        android:textColor="@color/grey_3"
        android:textColorHighlight="@color/deep_purple_200"
        android:textSize="40dp" />

</RelativeLayout>